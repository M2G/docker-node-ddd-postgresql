{
  "name": "node-ddd-boilerplate",
  "version": "0.0.0-development",
  "description": "RESTful api Domain Driven Design",
  "main": "index.js",
  "engines": {
    "node": ">= 12",
    "npm": ">=6"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node --harmony-top-level-await build/index.js",
    "watch-node": "nodemon build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect build/index.js",
    "test": "jest unit --forceExit --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "lint-staged": {
    "*.js": "lint"
  },
  "pre-commit": "lint:staged",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "awilix": "4.2.0",
    "awilix-express": "2.1.1",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "concurrently": "^6.0.2",
    "cors": "2.8.5",
    "cross-env": "5.2.0",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-status-monitor": "1.2.3",
    "faker": "4.1.0",
    "http-status": "1.3.1",
    "jsonwebtoken": "8.5.0",
    "moment": "2.24.0",
    "moment-timezone": "0.5.23",
    "morgan": "1.9.1",
    "mysql2": "^2.2.5",
    "nodemon": "1.18.10",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "pg": "7.8.1",
    "ramda": "0.26.1",
    "sequelize": "5.21.1",
    "tcomb": "3.2.29",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "4.2.0",
    "codecrumbs": "1.1.5",
    "commitizen": "3.0.7",
    "coveralls": "3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "docsify-cli": "4.3.0",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "8.1.5",
    "mocha": "6.1.4",
    "mocha-lcov-reporter": "1.3.0",
    "npm-check": "5.9.0",
    "pre-commit": "1.2.2",
    "semantic-release": "15.13.15",
    "sequelize-cli": "^5.5.1",
    "sinon": "7.2.7",
    "sinon-chai": "3.3.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "supertest": "3.4.2"
  },
  "standard": {
    "ignore": [
      "/public/docs"
    ],
    "globals": [
      "request",
      "app",
      "expect",
      "describe",
      "it",
      "config",
      "beforeEach"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshuaalpuerto/node-ddd-boilerplate.git"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "release": {
    "publish": [
      "@semantic-release/github"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "logs/*",
      "redis-data/*",
      "postgres-data/*",
      "coverage/*"
    ],
    "delay": "1000"
  },
  "resolutions": {
    "axios": "0.18.1",
    "fstream": "1.0.12"
  }
}
